load("@aspect_bazel_lib//lib:copy_to_bin.bzl", "copy_to_bin")
load("@npm//:defs.bzl", "npm_link_all_packages")

exports_files([
    ".swcrc",
    "tsconfig.json",
])

config_setting(
    name = "production",
    values = {"compilation_mode": "opt"},
)

npm_link_all_packages()

copy_to_bin(
    name = "tsconfig",
    srcs = ["tsconfig.json"],
    visibility = ["//src:__subpackages__"],
)

copy_to_bin(
    name = "swcrc",
    srcs = [".swcrc"],
    visibility = ["//src:__subpackages__"],
)
