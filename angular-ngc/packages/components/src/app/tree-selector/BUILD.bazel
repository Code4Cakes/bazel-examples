package(default_visibility = ["//:__subpackages__"])

load("@io_bazel_rules_sass//:defs.bzl", "sass_binary", "sass_library")
load("@npm//@angular/bazel:index.bzl", "ng_module")
load("@npm//@bazel/typescript:index.bzl", "ts_library")
load("//tools/testing:index.bzl", "jest_test")

COMMON_DEPS = [
  "@npm//@angular/forms",
  "@npm//@angular/common",
  "@npm//@angular/core",
  "@npm//@angular/platform-browser",
  "@npm//@angular/cdk",
  "@npm//@angular/material",
  "@npm//rxjs",
]

sass_library(
  name = "sass_lib",
  srcs = [
    "//packages/components/src/app/theme:theme-scss",
  ],
)

sass_binary(
  name = "tree-selector-scss",
  src = "tree-selector.component.scss",
  deps = [":sass_lib"],
)

ng_module(
  name = "tree-selector",
  module_name = "@intf/components/tree-selector",
  srcs = glob(["*.ts"], exclude = ["*spec.ts"]),
  assets = [
    ":tree-selector-scss",
  ],
  deps = COMMON_DEPS + [
  ]
)

ts_library(
  name = "tests",
  testonly = 1,
  srcs = glob(["*.spec.ts"]),
  deps = COMMON_DEPS + [
    ":tree-selector",
    "@npm//@types/jasmine",
    "@npm//axe-core",
  ]
)

jest_test(
  name = "test",
  testonly = 1,
  data = [":tests"],
)
